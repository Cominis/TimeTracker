<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:key="@string/category_theme_key"
        app:title="@string/category_theme_title">

        <SwitchPreferenceCompat
            app:key="@string/dark_theme_key"
            app:title="@string/dark_theme_title"
            app:summary="@string/dark_theme_summary"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:key="@string/category_delete_key"
        app:title="@string/category_delete_title">

        <Preference
            app:key="@string/delete_current_key"
            app:title="@string/delete_current_title"
            app:summary="@string/delete_current_summary"/>

        <Preference
            app:key="@string/delete_all_key"
            app:title="@string/delete_all_title"
            app:summary="@string/delete_all_summary"/>
    </PreferenceCategory>


</PreferenceScreen>