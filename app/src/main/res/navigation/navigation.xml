<?xml version="1.0" encoding="utf-8"?>

<!-- Note that the animations may show red in Android Studio;
     however, they are present and working perfectly fine. -->

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/routineTrackerFragment">
    <fragment
        android:id="@+id/routineTrackerFragment"
        android:name="com.example.lifetracker.routineTracker.RoutineTrackerFragment"
        android:label="fragment_routine_tracker"
        tools:layout="@layout/fragment_routine_tracker">
        <action
            android:id="@+id/action_routineTrackerFragment_to_routineSaveFragment"
            app:destination="@id/routineSaveFragment" />
    </fragment>
    <fragment
        android:id="@+id/routineSaveFragment"
        android:name="com.example.lifetracker.routineSave.RoutineSaveFragment"
        android:label="RoutineSaveFragment"
        tools:layout="@layout/fragment_routine_save">
        <argument
            android:name="RoutineId"
            app:argType="long" />
        <action
            android:id="@+id/action_routineSaveFragment_to_routineTrackerFragment"
            app:destination="@id/routineTrackerFragment"
            app:popUpTo="@id/routineTrackerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.lifetracker.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"/>
    <fragment
        android:id="@+id/statisticsSettingsFragment"
        android:name="com.example.lifetracker.statisticsSettings.StatisticsSettingsFragment"
        android:label="StatisticsSettingsFragment"
        tools:layout="@layout/fragment_statistics_settings">
        <action
            android:id="@+id/action_statisticsSettingsFragment_to_statisticsFragment"
            app:destination="@id/statisticsFragment"
            app:popUpTo="@id/routineTrackerFragment" />
        <action
            android:id="@+id/action_statisticsSettingsFragment_to_overAllStatisticsFragment"
            app:destination="@id/overAllStatisticsFragment"
            app:popUpTo="@id/routineTrackerFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="com.example.lifetracker.statistics.StatisticsFragment"
        android:label="StatisticsFragment"
        tools:layout="@layout/fragment_statistics"/>
    <fragment
        android:id="@+id/overAllStatisticsFragment"
        android:name="com.example.lifetracker.overAllStatistics.OverAllStatisticsFragment"
        android:label="OverAllStatisticsFragment" />
</navigation>
